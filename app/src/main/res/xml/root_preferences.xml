<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Display Options">

        <SwitchPreferenceCompat
            app:key="theme_preference"
            app:title="Dark Mode"
            android:summaryOn="App theme is set to Dark"
            android:summaryOff="App theme is set to Light"
            app:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Recipe Content">

        <ListPreference
            app:key="measurement_units"
            app:title="Measurement Units"
            app:defaultValue="metric"
            app:entries="@array/unit_entries"
            app:entryValues="@array/unit_values" />

    </PreferenceCategory>

</PreferenceScreen>
