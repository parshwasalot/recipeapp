<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NearbyGroceriesActivity">

    <!--
        This is the fragment that will hold the Google Map.
        The layout_width and layout_height are set to "match_parent"
        so the map fills the entire screen.
    -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--
        This FloatingActionButton allows the user to center the map
        on their current location. It is aligned to the bottom and
        end (right) of the screen with a margin.
    -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:contentDescription="My Location"
        android:src="@drawable/ic_my_location"
        app:backgroundTint="@android:color/white"
        app:tint="@color/purple" />

</RelativeLayout>
